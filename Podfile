target 'Easymed' do
	source 'https://github.com/CocoaPods/Specs.git'
	platform :ios, '8.0'
	use_frameworks!

	#Alamofire
	pod 'Alamofire', '~> 3.3'
	pod 'AlamofireObjectMapper', '~> 3.0'

	#icons
	pod 'Font-Awesome-Swift', '~> 1.4.7'
	pod 'Google-Material-Design-Icons-Swift', '~> 1.0.1'

	#color
	pod 'Hue'

	#UI stuff
	pod 'RichEditorView'                #Rich Text Editor
	pod 'Charts'                        #Charts generator
	pod 'EZAlertController', '0.3'
	pod 'SwiftOverlays', '~> 2.0.0'     #UI elements that floats (loading, error, etc)
	pod 'Gecco'                         #Tutorials

	#Utils
	pod 'SwiftString'
	pod 'RandomKit', '~> 1.6.0'         #random anything generator
	pod 'SwiftValidator', '3.0.3'
	pod 'STRegex', '~> 0.3.0'           #Regex checker
	pod 'PhoneNumberKit', '~> 0.8'      #Phone number validator
	pod 'SwiftQRCode'                   #QR code generator (& decoder?)
	pod 'Scale'
	pod 'EZSwiftExtensions'
    
    #Things that don't work
    #SwiftyJSON + AlamoFire
#	pod 'Eureka', '~> 1.5'              #Form generator, but it fail to compile
    
end

